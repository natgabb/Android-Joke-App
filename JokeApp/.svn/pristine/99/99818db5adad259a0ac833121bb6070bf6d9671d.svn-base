<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout_setcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewSetCategoryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            android:background="@color/mainBackground"
            android:padding="@dimen/padding_small"
            android:text="@string/setcat_message"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout_setcat_checkBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/set_cat_buttonSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:height="@dimen/main_buttonHeight"
            android:text="@string/setcat_save"
            android:textColor="@color/buttonText"
            android:width="@dimen/main_buttonWidth" >
        </Button>
    </LinearLayout>

</ScrollView>