<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/mainBackground"
        android:padding="@dimen/padding_small"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/buttonShowAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/buttonBackground"
        android:text="@string/showjoke_showanswer"
        android:textColor="@color/buttonText"
        android:width="@dimen/main_buttonWidth" />

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/mainBackground"
        android:padding="@dimen/padding_small"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/buttonNextJoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/buttonBackground"
        android:text="@string/showjoke_nextjoke"
        android:textColor="@color/buttonText"
        android:width="@dimen/main_buttonWidth" />

    <Button
        android:id="@+id/showjoke_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/goback"
        android:textColor="@color/buttonText"
        android:width="@dimen/main_buttonWidth" >
    </Button>

</LinearLayout>