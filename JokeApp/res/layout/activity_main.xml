<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonJokeMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/main_jokeMe"
        android:textColor="@color/buttonText"
        android:layout_margin="@dimen/padding_small"
        android:width="@dimen/main_buttonWidth" />

    <Button
        android:id="@+id/buttonSetCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/main_setCategory"
        android:textColor="@color/buttonText"
        android:layout_margin="@dimen/padding_small"
        android:width="@dimen/main_buttonWidth" />

    <Button
        android:id="@+id/buttonAddJokes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/main_addJokes"
        android:textColor="@color/buttonText"
        android:layout_margin="@dimen/padding_small"
        android:width="@dimen/main_buttonWidth" />

    <Button
        android:id="@+id/buttonAddCats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/main_addCats"
        android:textColor="@color/buttonText"
        android:layout_margin="@dimen/padding_small"
        android:width="@dimen/main_buttonWidth" />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:height="@dimen/main_buttonHeight"
        android:text="@string/main_quit"
        android:textColor="@color/buttonText"
        android:layout_margin="@dimen/padding_small"
        android:width="@dimen/main_buttonWidth" />

</LinearLayout>